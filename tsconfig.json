{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "es2020.bigint"
    ],
    "jsx": "react",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
