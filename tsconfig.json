{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "es5",
      "dom",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "es2015.symbol.wellknown",
      "es2020.bigint"
    ],
    "jsx": "react",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
